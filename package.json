{
  "name": "yeoman-environment",
  "version": "4.0.0-alpha.5",
  "description": "Handles the lifecyle and bootstrapping of generators in a specific environment",
  "keywords": [
    "development",
    "dev",
    "build",
    "tool",
    "cli",
    "scaffold",
    "scaffolding",
    "generate",
    "generator",
    "yeoman",
    "app"
  ],
  "homepage": "http://yeoman.io",
  "repository": "yeoman/environment",
  "license": "BSD-2-Clause",
  "author": "Yeoman",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js"
    },
    "./cli/*": "./dist/cli/*.js",
    "./lib/*": "./dist/*.js",
    "./lib/util/*": "./dist/util/*.js",
    "./package.json": "./package.json",
    "./cli": "./dist/cli/index.js"
  },
  "main": "./dist/index.js",
  "bin": {
    "yoe": "dist/cli/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc && npm run copy-types",
    "copy-types": "cpy \"src/**/*.d.(|c|m)ts\" dist/",
    "doc": "npm run doc:generate && npm run doc:fix && npm run doc:prettier",
    "doc:fix": "sed -i -e 's:^[[:space:]]*<!--[[:space:]]*$::g' -e 's:^[[:space:]]*-->[[:space:]]*$::g' $npm_package_config_doc_path/global.html || true",
    "doc:generate": "jsdoc -c jsdoc.json -d $npm_package_config_doc_path",
    "doc:prettier": "prettier $npm_package_config_doc_path --write --ignore-path .prettierignore-doc",
    "fix": "xo --fix",
    "prepare": "npm run build",
    "pretest": "xo",
    "test": "c8 esmocha --forbid-only",
    "test-base": "c8 esmocha test/environment*.js test/store.js test/util.js test/adapter.js",
    "test-environment": "c8 esmocha test/environment.js",
    "test-generators": "c8 esmocha test/generators.js",
    "test-resolver": "c8 esmocha test/resolver.js"
  },
  "config": {
    "doc_path": "./yeoman-environment-doc"
  },
  "dependencies": {
    "@npmcli/arborist": "^6.2.9",
    "@yeoman/adapter": "^0.2.0",
    "@yeoman/conflicter": "^0.5.0",
    "@yeoman/namespace": "^1.0.0",
    "@yeoman/transform": "^1.0.0",
    "@yeoman/types": "^0.4.0",
    "arrify": "^3.0.0",
    "chalk": "^5.2.0",
    "commander": "^10.0.1",
    "debug": "^4.3.4",
    "escape-string-regexp": "^5.0.0",
    "execa": "^7.1.1",
    "fly-import": "^0.2.0",
    "globby": "^13.1.4",
    "grouped-queue": "^2.0.0",
    "is-scoped": "^3.0.0",
    "lodash-es": "^4.17.21",
    "log-symbols": "^5.1.0",
    "mem-fs": "^3.0.0",
    "mem-fs-editor": "^10.0.1",
    "npmlog": "^7.0.1",
    "preferred-pm": "^3.0.3",
    "semver": "^7.5.0",
    "slash": "^5.0.1",
    "untildify": "^4.0.0",
    "yeoman-generator": "^5.8.0"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.7",
    "c8": "^7.13.0",
    "cpy-cli": "^4.2.0",
    "esmocha": "^1.0.1",
    "fs-extra": "^11.1.1",
    "inquirer": "^9.2.1",
    "jsdoc": "^4.0.2",
    "prettier": "^2.8.8",
    "prettier-plugin-packagejson": "^2.4.3",
    "rimraf": "^5.0.0",
    "sinon": "^15.0.4",
    "sinon-test": "^3.1.5",
    "strip-ansi": "^7.0.1",
    "tui-jsdoc-template": "^1.2.2",
    "typescript": "^5.0.4",
    "xo": "0.54.2",
    "yeoman-assert": "^3.1.1",
    "yeoman-generator": "^5.8.0",
    "yeoman-test": "^8.0.0-beta.4"
  },
  "peerDependencies": {
    "mem-fs": "^3.0.0"
  },
  "engines": {
    "node": "^16.13.0 || >=18.12.0"
  }
}
